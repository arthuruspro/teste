<script>
const cpfModal=document.getElementById('cpfModal');function openCpfModal(){cpfModal.classList.add('active');document.body.style.overflow='hidden'}function closeCpfModal(){cpfModal.classList.remove('active');document.body.style.overflow=''}cpfModal.addEventListener('click',(e)=>{if(e.target===cpfModal)closeCpfModal()});document.addEventListener('keydown',(e)=>{if(e.key==='Escape'&&cpfModal.classList.contains('active'))closeCpfModal()});const observer=new IntersectionObserver((entries)=>{entries.forEach(entry=>{if(entry.isIntersecting){entry.target.classList.add('visible')}})},{threshold:0.1,rootMargin:'0px 0px -40px 0px'});document.querySelectorAll('.reveal').forEach(el=>observer.observe(el));document.querySelectorAll('a[href^="#"]').forEach(link=>{link.addEventListener('click',(e)=>{if(link.getAttribute('href')==='#cpf-check'){e.preventDefault();openCpfModal();return}e.preventDefault();const target=document.querySelector(link.getAttribute('href'));if(target){target.scrollIntoView({behavior:'smooth',block:'start'})}})});
</script>

